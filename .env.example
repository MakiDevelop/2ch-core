# =========================
# Application
# =========================

NODE_ENV=development
PORT=3000

# =========================
# Database (PostgreSQL)
# =========================

DATABASE_URL=postgres://postgres:postgres@localhost:5432/2ch

# =========================
# Cache / Realtime (Redis)
# =========================

REDIS_URL=redis://redis:6379

# =========================
# Security / Limits (v0)
# =========================

# Used for basic rate limit or fingerprint salt
# Do NOT use this as auth secret
APP_SECRET=change-me-in-env

# Admin IP Hash whitelist (comma-separated)
# To get your IP hash: curl -X POST /posts with any content and check the response
# Then add the ipHash to this list
ADMIN_IP_HASHES=your_ip_hash_here

# =========================
# Feature Flags
# =========================

ENABLE_WEBSOCKET=false
ENABLE_RATE_LIMIT=true
