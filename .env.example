# =========================
# Application
# =========================

NODE_ENV=development
PORT=3000

# =========================
# Database (PostgreSQL)
# =========================

DATABASE_URL=postgres://postgres:postgres@localhost:5432/2ch

# =========================
# Cache / Realtime (Redis)
# =========================

REDIS_URL=redis://redis:6379

# =========================
# Security / Limits (v0)
# =========================

# Used for basic rate limit or fingerprint salt
# Do NOT use this as auth secret
APP_SECRET=change-me-in-env

# =========================
# Feature Flags
# =========================

ENABLE_WEBSOCKET=false
ENABLE_RATE_LIMIT=true
